<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dac-lol?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">@dac</property>
    <property name="hibernate.connection.password">@dac</property>
    <property name="javax.persistence.validation.mode">NONE</property>
    <mapping class="br.ufpr.tads.dac.lol.model.Cliente"/>
    <mapping resource="mapping/Cliente.hbm.xml"/>
    <mapping class="br.ufpr.tads.dac.lol.model.Funcionario"/>
    <mapping class="br.ufpr.tads.dac.lol.model.Pedido"/>
    <mapping class="br.ufpr.tads.dac.lol.model.PedidoTipoRoupa"/>
    <mapping class="br.ufpr.tads.dac.lol.model.PedidoTipoRoupaPK"/>
    <mapping class="br.ufpr.tads.dac.lol.model.TipoRoupa"/>
  </session-factory>
</hibernate-configuration>
